@model Ticketsio.Models.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 400px; background-color: #222; color: white; border-radius: 10px;">
        <h2 class="text-center mb-3">Sign In</h2>
        <hr style="border-color: #e50914;" />

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" style="background-color: #333; color: white; border-radius: 5px; border: 1px solid #555;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" style="background-color: #333; color: white; border-radius: 5px; border: 1px solid #555;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="RememberMe" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">
                    Remember Me
                </label>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-danger" style="background-color: #e50914; border: none; border-radius: 5px;">Login</button>
            </div>

            <div class="text-center">
                <a href="#" class="text-warning">Forgot Password?</a>
                <br />
                <span>Don't have an account? <a asp-action="Register" class="text-warning">Sign Up</a></span>
            </div>
        </form>
    </div>
</div>


