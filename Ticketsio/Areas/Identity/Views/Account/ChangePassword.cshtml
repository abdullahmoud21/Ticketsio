@model Ticketsio.Models.ViewModels.ForgotPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 400px; background-color: #222; color: white; border-radius: 10px;">
        <h2 class="text-center mb-3">Reset Password</h2>
        <hr style="border-color: #e50914;" />

        <form asp-area="Identity" asp-controller="Account" asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email"
                       style="background-color: #333; color: white; border-radius: 5px; border: 1px solid #555;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label"></label>
                <input asp-for="OldPassword" type="password" class="form-control" placeholder="Enter current password"
                       style="background-color: #333; color: white; border-radius: 5px; border: 1px solid #555;" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password"
                       style="background-color: #333; color: white; border-radius: 5px; border: 1px solid #555;" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password"
                       style="background-color: #333; color: white; border-radius: 5px; border: 1px solid #555;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-danger"
                        style="background-color: #e50914; border: none; border-radius: 5px;">
                    Reset Password
                </button>
            </div>

            <div class="text-center">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-warning">Back to Home</a>
            </div>
        </form>
    </div>
</div>
