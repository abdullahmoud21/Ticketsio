@model Ticketsio.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit Movie</h1>

<div class="card shadow-lg p-4">
    <h4 class="text-primary">@Model.Name Movie</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control border-primary" value="@Model.Name" placeholder="Enter movie name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control border-primary" value="@Model.Description" rows="3" placeholder="Enter movie description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" type="number" class="form-control border-primary" value="@Model.Price" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImgUrl" class="form-label fw-bold"></label>
                    <input asp-for="ImgUrl" type="url" class="form-control border-primary" value="@Model.ImgUrl" placeholder="Enter image URL" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrailerUrl" class="form-label fw-bold"></label>
                    <input asp-for="TrailerUrl" type="url" class="form-control border-primary" value="@Model.TrailerUrl" placeholder="Enter trailer URL" />
                    <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label fw-bold"></label>
                        <input asp-for="StartDate" type="date" value="@Model.StartDate" class="form-control border-primary" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label fw-bold"></label>
                        <input asp-for="EndDate" type="date" value="@Model.EndDate" class="form-control border-primary" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Category Dropdown -->
                <div class="mb-3">
                    <label asp-for="Category.Id" class="form-label fw-bold">Select Category</label>
                    <select asp-for="Category.Id" value="@Model.Category" asp-items="ViewBag.Categories" class="form-select border-primary">
                        <option value="">-- Select a Category --</option>
                    </select>
                    <span asp-validation-for="Category.Id" class="text-danger"></span>
                </div>
                <!-- Dropdown for Cinemas -->
                <div class="mb-3">
                    <label asp-for="Cinema.Id"  class="form-label fw-bold">Select Cinema</label>
                    <select asp-for="Cinema.Id" value="@Model.Cinema"  asp-items="ViewBag.Cinemas" class="form-select border-primary">
                        <option value="">-- Select a Cinema --</option>
                    </select>
                    <span asp-validation-for="Cinema.Id" class="text-danger"></span>
                </div>

                <!-- Multi-Select for Actors -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Select Actors</label>
                    <select asp-for="ActorMovies" asp-items="ViewBag.Actors" value="@Model.ActorMovies"
                            class="form-select border-primary selectpicker" multiple data-live-search="true">
                    </select>
                    <span asp-validation-for="ActorMovies" class="text-danger"></span>
                </div>



                <div class="mt-3">
                    <button type="submit" class="btn btn-success me-2">✅ Edit</button>
                    <a asp-action="Index" class="btn btn-secondary">⬅️ Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

