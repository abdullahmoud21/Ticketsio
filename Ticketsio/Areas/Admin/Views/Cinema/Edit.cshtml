@model Ticketsio.Models.Cinema

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit Cinema</h1>

<div class="card shadow-lg p-4">
    <h4 class="text-primary">Update Cinema Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control border-primary" placeholder="Enter cinema name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <input asp-for="Description" class="form-control border-primary" placeholder="Enter description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CinemaLogo" class="form-label fw-bold"></label>
                    <input asp-for="CinemaLogo" class="form-control border-primary" placeholder="Enter logo URL" />
                    <span asp-validation-for="CinemaLogo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold"></label>
                    <input asp-for="Address" class="form-control border-primary" placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success me-2">💾 Save</button>
                    <a asp-action="Index" class="btn btn-secondary">⬅️ Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


