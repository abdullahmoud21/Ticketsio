@model IEnumerable<Ticketsio.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1 class="mb-4">Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">+ Create New</a>
</p>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th class="text-center">ID</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.Name)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle text-center">@item.Id</td> 
                <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                       onclick="return confirmDelete('@item.Name');">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete(categoryName) {
        return confirm("Are you sure you want to delete the category: " + categoryName + "?");
    }
</script>
