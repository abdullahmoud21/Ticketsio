@model Ticketsio.Models.Actors

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit Actor</h1>

<div class="card shadow-lg p-4">
    <h4 class="text-primary">Update Actor Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label fw-bold"></label>
                    <input asp-for="FirstName" class="form-control border-primary" placeholder="Enter first name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label fw-bold"></label>
                    <input asp-for="LastName" class="form-control border-primary" placeholder="Enter last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Bio" class="form-label fw-bold"></label>
                    <textarea asp-for="Bio" class="form-control border-primary" rows="3" placeholder="Enter actor bio"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProfilePicture" class="form-label fw-bold"></label>
                    <input asp-for="ProfilePicture" class="form-control border-primary" placeholder="Enter profile picture URL" />
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="News" class="form-label fw-bold"></label>
                    <input asp-for="News" class="form-control border-primary" placeholder="Enter actor news" />
                    <span asp-validation-for="News" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success me-2">💾 Save</button>
                    <a asp-action="Index" class="btn btn-secondary">⬅️ Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

