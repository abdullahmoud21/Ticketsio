@model List<Movie>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies - Ticketsio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #141414;
            color: #ffffff;
        }

        .movie-card {
            background-color: #222;
            color: #fff;
            border: none;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
            border-radius: 8px;
            padding-bottom: 10px;
        }

            .movie-card:hover {
                transform: scale(1.05);
            }

            .movie-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                border-top-left-radius: 8px;
                border-top-right-radius: 8px;
            }

        .movie-status {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <partial name="_MoviesLayout" model="Model" />
</body>
</html>



