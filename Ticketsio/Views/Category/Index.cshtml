@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Category>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories - Ticketsio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
        background-color: #141414;
        color: #ffffff;
        }

        .category-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        }

        .category-card {
        background: linear-gradient(135deg, #ff512f, #dd2476);
        color: white;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        width: 200px;
        height: 200px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        cursor: pointer;
        position: relative;
        }

        .category-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 5px 15px rgba(255, 81, 47, 0.6);
        }

        .category-icon {
        font-size: 45px;
        margin-bottom: 10px;
        }

        .category-name {
        font-size: 18px;
        font-weight: bold;
        }

        .category-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        opacity: 0.2;
        border-radius: 12px;
        }
    </style>
</head>
<body>

    <div class="container mt-4 text-center">
        <h2 class="mb-4">Explore Movie Categories</h2>
        <div class="category-container">
        @foreach (var category in Model)
        {
                <a asp-controller="Movie" asp-action="ViewByCategory" asp-route-categoryId="@category.Id" class="category-card text-decoration-none">
                    <div class="category-name">@category.Name</div>
                </a>
        }
        </div>
    </div>

</body>
</html>
