<!DOCTYPE html>
<html>
<head>
    <title>Ticketsio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #141414;
            color: #ffffff;
        }

        .navbar {
            background-color: #e50914 !important;
            padding: 10px 20px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: bold;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107 !important;
            }

        .search-bar {
            flex-grow: 1;
            max-width: 400px;
            display: flex;
            align-items: center;
        }

        .form-control {
            border-radius: 20px 0 0 20px;
            border: none;
            padding: 10px 15px;
            transition: 0.3s;
            background-color: #222;
            color: white;
        }

            .form-control:focus {
                box-shadow: 0 0 10px #ffc107;
                outline: none;
            }

        .search-btn {
            border-radius: 0 20px 20px 0;
            background-color: #ffc107;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            transition: 0.3s;
        }

            .search-btn:hover {
                background-color: #e0a800;
            }

        .card {
            background-color: #222;
            color: #fff;
            border: none;
        }

        .btn-primary {
            background-color: #e50914;
            border: none;
        }

            .btn-primary:hover {
                background-color: #b20710;
            }

        .logout-btn {
            background: none;
            border: none;
            color: #dc3545;
            padding: 5px 15px;
            text-align: left;
            width: 100%;
        }

            .logout-btn:hover {
                background-color: #f8d7da;
            }

        footer {
            background-color: #111;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand text-white" href="/">Ticketsio</a>

            <form asp-area="Customer" asp-controller="Movie" asp-action="Search" class="d-flex search-bar mx-3">
                <input name="searchtext" id="searchtext" class="form-control" type="search" placeholder="Search movies..." aria-label="Search">
                <button type="submit" class="search-btn">
                    🔍
                </button>
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Customer"  asp-controller="Movie" asp-action="ViewMovies">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Customer"  asp-controller="Category" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Customer"  asp-controller="Cinema" asp-action="Index">Cinemas</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-area="Identity" asp-controller="Account" asp-action="Profile">Profile</a></li>
                                <li>
                                    <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="logout-btn">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login" asp-action="Login">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Register" asp-action="Register">Sign Up</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center py-3 mt-4">
        <p>&copy; 2025 Ticketsio. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
