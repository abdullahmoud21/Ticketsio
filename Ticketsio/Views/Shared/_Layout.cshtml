<!DOCTYPE html>
<html>
<head>
    <title>Ticketsio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #141414;
            color: #ffffff;
        }

        .navbar {
            background-color: #e50914 !important;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: bold;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107 !important;
            }

        .search-bar {
            flex-grow: 1;
            max-width: 400px;
        }

        .form-control {
            border-radius: 20px;
            border: none;
            padding: 10px 15px;
            transition: 0.3s;
        }

            .form-control:focus {
                box-shadow: 0 0 10px #ffc107;
                outline: none;
            }

        .card {
            background-color: #222;
            color: #fff;
            border: none;
        }

        .btn-primary {
            background-color: #e50914;
            border: none;
        }

            .btn-primary:hover {
                background-color: #b20710;
            }

        footer {
            background-color: #111;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand text-white" href="/">Ticketsio</a>

            <form asp-controller="Movie" asp-action="Search" class="d-flex search-bar mx-3">
                <input name="searchtext" id="searchtext" class="form-control" type="search" placeholder="Search movies..." aria-label="Search">
            </form>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Movie" asp-action="ViewMovies">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Category" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cinema" asp-action="Index">Cinemas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center py-3 mt-4">
        <p>&copy; 2025 Ticketsio. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
