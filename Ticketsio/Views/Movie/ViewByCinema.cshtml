@{

    Layout = "~/Views/Shared/_Layout.cshtml";  // Ensure this matches your layout file path

}
@model List<Movie>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies - Ticketsio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #141414;
            color: #ffffff;
        }

        .movie-card {
            background-color: #222;
            color: #fff;
            border: none;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
            border-radius: 8px;
            padding-bottom: 10px;
        }

            .movie-card:hover {
                transform: scale(1.05);
            }

            .movie-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                border-top-left-radius: 8px;
                border-top-right-radius: 8px;
            }

        .movie-status {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-center mb-4">Movies</h2>

        <div class="row">
            @foreach (var movie in Model)
            {

                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card movie-card position-relative">
                        <span class="movie-status badge">@movie.MovieStatus</span>
                        <img src="~/images/movies/@movie.ImgUrl" class="card-img-top" alt="@movie.Name">
                        <div class="card-body text-center">
                            <h5 class="card-title">@movie.Name</h5>
                            <p class="card-text"><strong>Category:</strong> @movie.Category.Name</p>
                            <p class="card-text"><strong>Price:</strong> @movie.Price EGP</p>
                            <p class="card-text"><strong>Cinema:</strong> @movie.Cinema.Name</p>
                            <p class="card-text"><strong>Start Date:</strong> @movie.StartDate</p>
                            <p class="card-text"><strong>End Date:</strong> @movie.EndDate</p>

                            <partial name="_BookTicketButton" model="movie" />
                            <a asp-controller="Movie" asp-action="Details" asp-route-movieId="@movie.Id" class="btn btn-secondary mt-2">More Details</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>

</body>
</html>


