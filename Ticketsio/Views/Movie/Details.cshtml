@{

    Layout = "~/Views/Shared/_Layout.cshtml";  // Ensure this matches your layout file path

}
@model Movie
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Details - Ticketsio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
        background-color: #141414;
        color: #ffffff;
        }

        .movie-container {
        max-width: 900px;
        margin: auto;
        background-color: #222;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
        }

        .movie-header {
        text-align: center;
        }

        .movie-image {
        width: 70%;
        height:auto;
        object-fit: cover;
        border-radius: 10px;
        margin-left:15%;
        }

        .actor-list {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 15px;
        }

        .actor-img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #fff;
        }

        .trailer-container {
        text-align: center;
        margin-top: 20px;
        }

        .trailer-container iframe {
        width: 100%;
        height: 400px;
        border-radius: 10px;
        }

        .btn-book {
        background-color: red;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 16px;
        text-decoration: none;
        display: inline-block;
        width: 100%;
        text-align: center;
        color: white;
        margin-top: 15px;
        }

        .btn-book:hover {
        background-color: darkred;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <div class="movie-container">
            <div class="movie-header">
                <h2>@Model.Name</h2>
                <p class="text-muted">@Model.Category.Name</p>
            </div>

            <img src="~/images/movies/@Model.ImgUrl" class="movie-image" alt="@Model.Name">

            <div class="mt-3">
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Price:</strong> @Model.Price EGP</p>
                <p><strong>Cinema:</strong> @Model.Cinema.Name</p>
                <p><strong>Start Date:</strong> @Model.StartDate</p>
                <p><strong>End Date:</strong> @Model.EndDate</p>
            </div>

            <h4 class="mt-3">Actors</h4>
            <div class="actor-list">
                @foreach (var actor in ViewBag.Actors)
                {

                    <img src="~/images/cast/@actor.ProfilePicture" class="actor-img" alt="@actor.FirstName" title="Actor 1">

                }

            </div>

            <div class="trailer-container">
                <h4 class="mt-3">Trailer</h4>
                <iframe src="@Model.TrailerUrl" frameborder="0" allowfullscreen></iframe>
            </div>

            <a href="#" class="btn btn-book mt-2">Book Now</a>
        </div>
    </div>

</body>
</html>
